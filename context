import requests
from duckduckgo_search import DDGS

# This is the schema Ollama needs to understand the tool
SCHEMA = {
    'type': 'function',
    'function': {
        'name': 'web_search',
        'description': 'Search the internet for current events or specific facts',
        'parameters': {
            'type': 'object',
            'properties': {
                'query': {'type': 'string', 'description': 'The search term'},
            },
            'required': ['query'],
        },
    },
}

# This is the actual execution logic
def execute(query: str):
    results = []
    with DDGS() as ddgs:
        for r in ddgs.text(query, max_results=3):
            results.append(f"Title: {r['title']}\nSnippet: {r['body']}\nURL: {r['href']}")
    return "\n\n".join(results)
